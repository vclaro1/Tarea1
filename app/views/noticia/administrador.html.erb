<table class="table">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Creada en:</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @noticia.each do |noticium| %>
      <tr>
        <td><%= noticium.titulo %></td>
        <td><%= noticium.created_at %></td>
        <td><%= link_to 'Edit', edit_noticium_path(noticium) %></td>
        <td><%= link_to 'Destroy', noticium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Noticium', new_noticium_path , class: "btn btn-primary"%>
